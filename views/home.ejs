<%- include('./shared/header'); %>

<div class="min-h-screen mx-auto lg:flex sm:max-w-lg">
  <div class="w-full">
    <%- include('./shared/logo'); %>
    <div class="px-10 mt-12 lg:px-12 xl:max-w-2xl">
      <div
        class="flex flex-col items-center justify-center mt-12 space-y-12  lg:mt-6"
        style="height: calc(100vh - 24rem)"
      >
        <div>
          <h2
            class="text-4xl font-bold text-center text-indigo-900  font-display lg:text-left xl:text-5xl xl:text-bold"
          >
            Home
          </h2>
          <p class="mt-2">
            This page should only be opened by authenticated user
          </p>
          <% if (user) { %>
          <code> <%= user %> </code>
          <% } %>
        </div>
        <a
          href="/logout"
          class="flex justify-center w-full py-3 font-semibold tracking-wide text-gray-100 bg-indigo-500 rounded-full shadow-lg  font-display focus:outline-none focus:shadow-outline hover:bg-indigo-600"
        >
          Log Out</a
        >
      </div>
    </div>
  </div>
</div>

<%- include('./shared/footer'); %>
